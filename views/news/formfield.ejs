<div class="form-group">
  
  <label for="title"> Title </label>
  <input required value="<%= news.title %>" type="text" name="title" id="title" class="form-control">

  <label for="author"> Author </label>
  <input required value="<%= news.author %>" type="text" name="author" id="author" class="form-control">

  <label for="description"> Description</label>
  <textarea name="description" id="description" class="form-control">
    <%= news.description %>
  </textarea>
  
  <label for="markdown"> Markdown</label>
  <textarea required name="markdown" id="markdown" class="form-control">
    <%= news.markdown %>
  </textarea>

</div>

<button type="submit" class="btn btn-primary">Save</button>
<a href="/news" class="btn btn-secondary">Cancel</a>